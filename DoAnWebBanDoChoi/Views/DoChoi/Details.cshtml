
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:red; font-weight:bold">THÔNG TIN CHI TIẾT ĐỒ CHƠI</h2>
<html>
<body class= "container">
    <div class="row">
        <div class="col-lg-4">
            <img src="~/Content/img/@Model.AnhBia" width="250px" />
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-11">
                    <div class="row" style="padding: 5px">
                        <h2 style="color: red">Tên đồ chơi: @Model.TenDC</h2>
                    </div>
                    <div class="row" style="padding: 5px">
                        <h3>Mô Tả: @Model.MoTa</h3>
                    </div>
                    <div class="row">
                        <h2 style="color: red">Giá: @Model.GiaBan đ</h2>
                    </div>
                    <div class="row" style="padding: 5px">
                        <h3>Thương hiệu: @ViewBag.tenth</h3>
                    </div>
                    <div class="row" style="padding: 5px">
                        <h3>Loại: @ViewBag.tenloai</h3>
                    </div>
                    <div class="row" style="padding: 5px">
                        <h3>Chất liệu: @ViewBag.tencl</h3>
                    </div>
                    <div class="row" style="padding: 5px">
                        <h3>Xuất xứ: @ViewBag.tenxx</h3>
                    </div>
                    <div class="row" style="margin-top: 100px; float: right;">
                        <button class="btn btn-danger">
                            <a style="text-decoration: none" href="@Url.Action("ThemGioHang", "GioHang", new { @iMaDC = @Model.MaDC, @strURL = Request.Url.ToString() })">
                                <span style="color: white">Đặt mua</span>
                            </a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<button class="btn btn-info">
    @Html.ActionLink("Quay lại mua tiếp", "Index")
</button>

