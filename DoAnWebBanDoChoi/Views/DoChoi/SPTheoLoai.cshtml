@using DoAnWebBanDoChoi.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DoChoi>
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<body>
    <h1 style="text-align: center; color: red">ĐỒ CHƠI @ViewBag.Ma</h1>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="row">
                    <a href="@Url.Action("Details", "DoChoi", new { id = item.MaDC })">
                        <img alt="@item.TenDC" src="~/Content/img/@item.AnhBia" width="250px" class="rounded" />
                    </a>
                </div>

                <div class="row">
                    <br />
                    <h4 style="text-align: center">
                        @item.TenDC
                    </h4>
                    <p style="color:red; font-weight:bold; text-align:center; font-size:xx-large">@item.GiaBan đ</p>
                    <p></p>
                </div>
            </div>
        }
    </div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</body>
</html>

