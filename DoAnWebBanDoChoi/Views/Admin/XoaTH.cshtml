@model DoAnWebBanDoChoi.Models.ThuongHieu

@{
    ViewBag.Title = "XoaTH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3>XÁC NHẬN THÔNG TIN BẠN MUỐN XÓA</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTH)
