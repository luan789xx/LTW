@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V15</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/assets/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title">
                    <span class="login100-form-title-1">
                        ADMIN LOGIN
                    </span>
                    <h5 style="color:red; text-align:center; font-family:'Times New Roman'">@ViewBag.Thongbao</h5>
                </div>

                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <form class="login100-form validate-form">
                            <div class="wrap-input100 validate-input m-b-26">
                                <span class="label-input100">Username</span>
                                <input class="input100" type="text" name="username" placeholder="Enter username">
                                <span class="focus-input100"></span>
                                <h6 style="color:red; font-family:'Times New Roman'">@ViewData["Loi1"]</h6>
                            </div>

                            <div class="wrap-input100 validate-input m-b-18">
                                <span class="label-input100">Password</span>
                                <input class="input100" type="password" name="pass" placeholder="Enter password">
                                <span class="focus-input100"></span>
                                <h6 style="color:red; font-family:'Times New Roman'">@ViewData["Loi2"]</h6>
                            </div>
                            <button class="btn btn-danger">
                                    <span style="color: white">Đăng nhập</span>
                            </button>
                            <br />
                            @Html.ActionLink("Quay lại trang cửa hàng", "Index", "DoChoi")
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Content/assets/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/assets/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/js/main.js"></script>

</body>
</html>