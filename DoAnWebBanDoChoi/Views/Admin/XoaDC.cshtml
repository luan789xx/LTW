@model DoAnWebBanDoChoi.Models.DoChoi

@{
    ViewBag.Title = "XoaDC";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN ĐỒ CHƠI CẦN XÓA</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên đồ chơi:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDC)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GiaBan) VNĐ
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyy}", Model.NgayCapNhat)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/Content/img/"+ Model.AnhBia)" width="120px" />
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>

        <dt>
            Thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThuongHieu.TenTH)
        </dd>

        <dt>
            Chất liệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChatLieu.TenCL)
        </dd>

        <dt>
            Xuất xứ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.XuatXu.TenXX)
        </dd>

        <dt>
            Loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai.TenLoai)
        </dd>

    </dl>
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ", "DoChoi")
        </div>
    }
</div>
